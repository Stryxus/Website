{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["modules/*"],
      "@public/*": ["public/*"],
      "@assets/*": ["src/assets/*"],
      "@css/*": ["src/styles/*"],
      "@lib/*": ["src/scripts/*"],
      "@layout/*": ["src/layouts/*"],
      "@comp/*": ["src/components/*"]
    }
  },
}
